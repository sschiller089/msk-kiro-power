{
  "mcpServers": {
    "awslabs.aws-msk-mcp-server": {
      "command": "uvx",
      "args": [
        "awslabs.aws-msk-mcp-server@latest",
        "--allow-writes"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_PROFILE": "${AWS_PROFILE}"
      },
      "disabled": false
    }
  }
}
